<html lang="en">
<%- include("../partials/head.ejs") %>

<body>
  <%- include("../partials/nav.ejs") %>

  <div class="blogs content">
    <h2>All Reports</h2>

    <% if (!error) { %>

      <% if (reports.length > 0) { %>
        <% reports.forEach(report => { %>
          <a class="single" href="/reports/singleReport/<%= report.id %>">
            <h3 class="title"><%= report.place %></h3>
            <p class="snippet"><%= report.description %></p>
            <p class="snippet">Posted on <%= report.createdAt.getDate() %>/<%= report.createdAt.getMonth() + 1 %>/<%= report.createdAt.getFullYear() %></p>
          </a>
        <% }) %>
      <% } else { %>
        <p>There are no reports to display...</p>
      <% } %>
    <% } else { %>
      <p><%= error %></p>
    <% } %>
    
  </div>

  <%- include("../partials/footer.ejs") %>
</body>
</html>